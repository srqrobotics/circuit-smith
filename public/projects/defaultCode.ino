[
  "#include <DHT.h>",
  "#include <LiquidCrystal.h>",
  "",
  "// Define pins",
  "#define DHTPIN 2       // Data pin for DHT22",
  "#define PIRPIN 3       // Output pin for PIR sensor",
  "#define DHTTYPE DHT22  // DHT 22 (AM2302)",
  "",
  "// Initialize DHT sensor",
  "DHT dht(DHTPIN, DHTTYPE);",
  "",
  "// Initialize LCD - Assuming pins: RS = 7, E = 8, D4 = 9, D5 = 10, D6 = 11, D7 = 12",
  "LiquidCrystal lcd(7, 8, 9, 10, 11, 12);",
  "",
  "void setup() {",
  "    // Start serial communication for debugging",
  "    Serial.begin(9600);",
  "    ",
  "    // Start the DHT sensor",
  "    dht.begin();",
  "    ",
  "    // Set up the LCD's number of columns and rows",
  "    lcd.begin(16, 2);",
  "    lcd.print(\"Initalizing...\");",
  "    ",
  "    // Initialize PIR sensor pin",
  "    pinMode(PIRPIN, INPUT);",
  "    delay(2000); // Allow time for DHT sensor to stabilize",
  "    lcd.clear();",
  "}",
  "",
  "void loop() {",
  "    // Read humidity and temperature from the DHT sensor",
  "    float humidity = dht.readHumidity();",
  "    float temperature = dht.readTemperature();",
  "",
  "    // Check if any reads failed and exit early (to try again).",
  "    if (isnan(humidity) || isnan(temperature)) {",
  "        Serial.println(\"Failed to read from DHT sensor!\");",
  "        return;",
  "    }",
  "",
  "    // Read PIR sensor",
  "    int motionDetected = digitalRead(PIRPIN);",
  "",
  "    // Print results to serial monitor",
  "    Serial.print(\"Humidity: \");",
  "    Serial.print(humidity);",
  "    Serial.print(\" %\\t Temperature: \");",
  "    Serial.print(temperature);",
  "    Serial.println(\" *C\");",
  "",
  "    // Display results on the LCD",
  "    lcd.setCursor(0, 0);",
  "    lcd.print(\"Humidity: \");",
  "    lcd.print(humidity);",
  "    lcd.print(\" %\");",
  "    ",
  "    lcd.setCursor(0, 1);",
  "    lcd.print(\"Temp: \");",
  "    lcd.print(temperature);",
  "    lcd.print(\" *C\");",
  "",
  "    // Output motion detection status",
  "    if (motionDetected) {",
  "        Serial.println(\"Motion detected!\");",
  "        lcd.setCursor(0, 1);",
  "        lcd.print(\"Motion Detected!\");",
  "    } ",
  "    ",
  "    // Delay between reads",
  "    delay(2000);",
  "}"
]